{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ Build",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-I/opt/homebrew/opt/openssl@3/include",
                "-L/opt/homebrew/opt/openssl@3/lib",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lssl",
                "-lcrypto"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}